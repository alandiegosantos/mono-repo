{
  "go.goroot": "/opt/homebrew/Cellar/go/1.21.3/libexec",
  "go.toolsEnvVars": {
    "GOPACKAGESDRIVER": "${workspaceFolder}/third-party/go/tools/gopackagesdriver.sh",
    "GOROOT": "/opt/homebrew/Cellar/go/1.21.3/libexec",
  },
  "go.enableCodeLens": {
    "runtest": false
  },
  "gopls": {
    "build.directoryFilters": [
      "-bazel-bin",
      "-bazel-out",
      "-bazel-testlogs",
      "-bazel-mypkg",
    ],
    "verboseOutput": true,
    "formatting.gofumpt": true,
    "formatting.local": "github.com/alandiegosantos/monorepo",
    "ui.completion.usePlaceholders": true,
    "ui.semanticTokens": true,
    "ui.codelenses": {
      "gc_details": false,
      "regenerate_cgo": false,
      "generate": false,
      "test": false,
      "tidy": false,
      "upgrade_dependency": false,
      "vendor": false
    },
  },

  "go.languageServerFlags": [
    "-rpc.trace",
    "-veryverbose",
  ],
  "go.useLanguageServer": true,
  "go.buildOnSave": "off",
  "go.lintOnSave": "on",
  "go.vetOnSave": "on",
  "go.trace.server": "verbose",
}
